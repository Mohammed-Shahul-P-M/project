<style>
    body {
        width: 100vw;
        font-family: 'Courier New', Courier, monospace;
        margin: 0;
        padding: 0;
    }

    .login p,
    .login input {
        display: block;
        text-align: center;
        margin: 10px auto;
        width: 80%;
        padding: 10px 0;
        margin: 20px auto;

    }

    .login input {
        font-size: 0.8rem;
        border: 1px solid rgb(167, 164, 164);
        border-radius: 4px;
    }

    .login input[type='submit'] {
        background-color: rgb(25, 176, 11);
        color: white;
        margin: 30px auto;

    }

    .login {

        width: 80%;
        max-width: 300px;
        text-align: center;
        align-items: center;
        border: 1px solid rgb(167, 164, 164);
        border-radius: 4px;
        margin: 40px auto;

    }


    input:focus {
        outline: rgb(25, 176, 11);
    }

    .heading {

        font-size: 1.2rem;
        font-weight: 550;
    }

    .error {
        width: 80%;
        max-width: 400px;
        background-color: rgb(247, 112, 112);
        color: white;
        padding: 10px;
        border-radius: 4px;
        text-align: center;
        margin: 10px auto 20px;
    }

    nav {
        background-color: rgb(218, 214, 218);
        height: 2.6rem;
        font-size: 1.7rem;
        padding: 6px;
        padding-top: 15px;
        padding-bottom: 10px;
    }

    nav span {
        font-weight: 600;
        color: rgb(25, 176, 11);
    }

    @media screen and (max-width:400px) {
        .login {
            min-height: 300px;
            margin-top: 25%;
        }

        nav span,
        p,
        p.heading {
            font-weight: 700;
        }

        nav {
            background-color: rgb(228, 233, 231);
            text-align: center;
        }


    }


    .otp-veryfiy {
        position: fixed;
        width: 100%;
        height: 100%;
        background-color: rgba(20, 15, 15, 0.789);
        z-index: 1;
        top: 0;
        left: 0;
        visibility: hidden;
    }

    #veryfy-otp {
        position: fixed;
        top: 40%;
        left: 50%;
        background-color: whitesmoke;
        transform: translate(-50%, -50%);
        padding: 0 10px 20px;
        border-radius: 4px;
        text-align: center;
    }

    .otp-veryfiy input {
        padding: 5px;
        border-radius: 5px;
        outline: none;
        margin-top: -10px;
        border: 1px solid rgb(189, 188, 188);
    }

    .otp-veryfiy input[type='submit'] {
        background-color: dodgerblue;
        color: white;
        font-weight: 550;
        border: none;
        padding: 5px 10px;
    }
</style>
<nav>
    <span>Big Mart</span>
</nav>
{{#if signup}}
{{!-- ------------------ section for signup ------------- --}}
{{!-- ----------------------sign up ---------------------------- --}}
<div style="margin-top: 100px;" id="sign-up" class="login">
    <form id="register-user" action="{{route}}" method="post">
        <p class="heading">{{formHeading}}</p>
        <input type="number" min="1000000000" name="phone" placeholder=" phone">
        <input type="password" name="password" placeholder=" password">
        <input type="submit" value="Log in">
    </form>
    {{#if loginroute}} <p>Already have an account <a href="{{loginroute}}">login</a></p>
    {{/if}}
</div>
{{else}}
{{#if errmsg}}
<div class="error">
    {{errmsg}}
</div>
{{/if}}
{{!-- -------------------------------login----------------------- --}}
