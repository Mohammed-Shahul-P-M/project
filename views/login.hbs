        <input type="submit" value="Log in">
    </form>
    {{#if signuproute}} <p>don't have an account <a href="{{signuproute}}">signup</a></p>
    {{/if}}
</div>

{{/if}}
<div class="otp-veryfiy">
    <form action="" id="veryfy-otp" method="post">
        <p class="heading">Veryfy otp</p>
        <input type="number" name="otp" placeholder="Enter otp">
