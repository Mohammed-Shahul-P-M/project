    <form action="{{route}}" method="post">
        <p class="heading">{{formHeading}}</p>
        <input type="text" {{#if Admin}} name="name" placeholder="username or email" {{else if userlogin}} name="phone"
            placeholder="Phone No" {{else }} name="email" placeholder="email" {{/if}}>
